<div class="container d-flex justify-content-center align-items-center min-vh-100">
  <div class="col-md-4">
    <p id="notice" class="alert alert-info"><%= notice %></p>

    <p>
      <strong>Name:</strong>
      <%= @librarian.name %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= @librarian.email %>
    </p>

    <p>
      <strong>Library:</strong>
      <%= @librarian.library.name %>
    </p>

    <p>
      <strong>Approved:</strong>
      <%= @librarian.approved %>
    </p>

    <div class="d-grid gap-2">
      <%= link_to 'Edit', edit_librarian_path(@librarian), class: 'btn btn-primary' %> |
      <% if current_librarian %>
        <%= link_to 'Back', librarians_path, class: 'btn btn-secondary' %>
      <% else %>
        <%= link_to 'Back', admins_path, class: 'btn btn-secondary' %>
      <% end %>
    </div>
  </div>
</div>