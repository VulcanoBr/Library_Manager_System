<div class="container d-flex justify-content-center align-items-center min-vh-100">
  <div class="col-md-4">
    <h2 class="mb-4">Log in Librarian</h2>

    <div>
      
      <% if alert %>
        <div id="notice_wrapper">
          <p class="alert alert-danger"><%= alert %></p>
        </div>
      <% elsif notice %>
        <div id="notice_wrapper">
          <p class="notice alert-success"><%= notice %></p>
        </div>
      <% end %>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
      <div class="mb-3">
        <%= f.label :email, class: "form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: "form-label" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-3">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, class: "form-check-label" %>
        </div>
      <% end %>

      <div class="d-grid mb-3">
        <%= f.submit "Log in", class: "btn btn-primary" %>
      </div>

      <div class="d-grid mb-3">
        <%= link_to 'Cancel', root_path, class: 'btn btn-danger' %>
      </div>
    <% end %>

    <%= render "librarians/shared/links", class: 'btn btn-secondary' %>
  </div>
</div>