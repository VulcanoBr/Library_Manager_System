
<div class="container">
  <h1 class="mt-3">Librarians</h1>

  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Library</th>
        <th>Approved</th>
        <th colspan="3"> Action</th>
      </tr>
    </thead>

    <tbody>
      <% @librarians.each do |librarian| %>
        <tr>
          <td><%= librarian.name %></td>
          <td><%= librarian.email %></td>
          <td><%= librarian.library.name %></td>
          <td><%= librarian.approved %></td>
          <td>
            <%= link_to librarian, class: 'btn btn-info' do %>
                <i class="fas fa-eye"></i>
            <% end %>
            <%= link_to edit_librarian_path(librarian), class: 'btn btn-warning' do %>
                <i class="fas fa-edit"></i>
            <% end %>
            <%= link_to  librarian, class: "btn btn-danger", method: :delete, data: { "turbo-method": :delete, 
                    turbo_confirm: "Tem certesa que deseja excluir este item ?"} do %>
                <i class="fas fa-trash" ></i> 
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div>
    <%= link_to admins_path, text: "Back", class: "btn btn-warning" do %>
        <i class="fas fa-arrow-left" ></i> 
        <span>Back Panel</span>
    <% end %>
  </div>
</div>