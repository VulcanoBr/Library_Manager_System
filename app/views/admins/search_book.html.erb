<div class="container">
  <p id="notice" class="text-success"><%= notice %></p> 

  <h1 class="mt-3">Books</h1>

  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Isbn</th>
        <th>Title</th>
        <th>Authors</th>
        
        <th>Published</th>
        
        <th>Subject</th>
        
        <th>Special Collection</th>
        <th>Library</th>
        <th>Available Count</th>
        <th>   </th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      <% if !@results.nil? then @results.each do |result| %>
        <tr>
          <td><%= result.isbn %></td>
          <td><%= result.title %></td>
          <td><%= result.author.name %></td>
          
          <td><%= result.publisher.name %></td>
          
          <td><%= result.subject.name %></td>
          
          <td><%= result.special_collection ? 'Yes' : 'No' %></td>
          <td><%= result.library.name %></td>
          <td>
            <span class="badge <%= result.count > 0 ? 'bg-success' : 'bg-danger' %>">
              <%= result.count %>
            </span>
          </td>
          <td>
            <%= link_to 'Book History', viewBookHistory_admins_path(id: result.id) %>
          </td>
          <td>
            <%= link_to result, class: 'btn btn-info' do %>
                <i class="fas fa-eye"></i>
            <% end %> 
          </td>
          <td>
            <%= link_to edit_book_path(result), class: 'btn btn-warning' do %>
                <i class="fas fa-edit"></i>
            <% end %> 
          </td>
          <td> 
            <%= link_to  result, class: "btn btn-danger", method: :delete, data: { "turbo-method": :delete, 
                    turbo_confirm: "Tem certesa que deseja excluir este item ?"} do %>
                <i class="fas fa-trash" ></i> 
            <% end %>
    
          </td>
        </tr>
      <% end %>
      <% end %>
    </tbody>
  </table>

  <div>
    <%= link_to show_books_admins_path, text: "Back", class: "btn btn-warning" do %>
        <i class="fas fa-arrow-left" ></i> 
        <span>Back </span>
    <% end %>

    <%= link_to admins_path, text: "Back Panel", class: "btn btn-warning" do %>
        <i class="fas fa-arrow-left" ></i> 
        <span>Back Panel</span>
    <% end %>
  </div>

</div>