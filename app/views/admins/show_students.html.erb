
<div class="container">
  <h1 class="mt-3">Students</h1>

  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>University</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @students.each do |student| %>
        <tr>
          <td><%= student.name %></td>
          <td><%= student.email %></td>
          <td><%= student.university.name %></td>
          <td>
            <%= link_to student, class: 'btn btn-info' do %>
                    <i class="fas fa-eye"></i>
            <% end %>
            <%= link_to edit_student_path(student), class: 'btn btn-warning' do %>
                    <i class="fas fa-edit"></i>
            <% end %>
            <%= link_to  student, class: "btn btn-danger", method: :delete, data: { "turbo-method": :delete, 
                      turbo_confirm: "Tem certesa que deseja excluir este item ?"} do %>
                      <i class="fas fa-trash" ></i> 
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div>
    <%= link_to admins_path, text: "Back", class: "btn btn-warning" do %>
        <i class="fas fa-arrow-left" ></i> 
        <span>Back Panel</span>
    <% end %>
  </div>
</div>