
<div class="container d-flex justify-content-center align-items-center min-vh-100">
  <div class="col-md-4">
    <h2 class="mb-4">Sign Up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}) do |form| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-3">
        <%= form.label :email, class: "form-label" %>
        <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :name, class: "form-label" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :phone, class: "form-label" %>
        <%= form.text_field :phone, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :education_level, class: "form-label" %>
        <%= form.select(:education_level_id, EducationLevel.ordered_by_name.collect { |l| [l.name, l.id] }, 
            { include_blank: "Select a Education Level" }, { class: "form-select" }) %>
      </div>

      <div class="mb-3">
        <%= form.label :university, class: "form-label" %>
        <%= form.select(:university_id, University.ordered_by_name.collect { |l| [l.name, l.id] }, 
            { include_blank: "Select a University" }, { class: "form-select" }) %>
      </div>

      <div class="mb-3">
        <%= form.label :password, class: "form-label" %>
        <%= form.password_field :password, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.hidden_field :max_book_allowed, value: '5' %>
      </div>

      <div class="d-grid mb-3">
        <%= form.submit "Sign Up", class: 'btn btn-primary', id: 'button' %>
      </div>

      <div class="d-grid mb-3">
        <%= link_to 'Cancel', root_path, class: 'btn btn-danger' %>
      </div>

    <% end %>
  </div>
</div>

<script type="text/javascript">
  max_days_borrowed = 10;
  document.getElementById('student_education_level').addEventListener('change',insert_val);
  function insert_val() {
      
      var education_level = document.getElementById('student_education_level').value;
    console.log(education_level);
      if(education_level == 'B.S'){
          max_days_borrowed = 10;
      }
      else if(education_level == 'M.S'){
          max_days_borrowed = 20;
      }
      else if(education_level == 'PHD'){
          max_days_borrowed = 30;
      }
    document.getElementById('student_max_book_allowed').value  =max_days_borrowed;
    console.log(document.getElementById('student_max_book_allowed').value);
   }

</script>
