


  <header class="">
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container-fluid">
      <div class="d-flex align-items-center">
        <%= image_tag 'logolibrary.webp', alt: 'Logo', width: "65", height: "55", class: "me-5 custom-margin" %>
        <div class="flex-grow-1">
          <h1 class="centered-h1">Welcome to Library</h1>
        </div>
      </div>
    </div>
  </nav>
</header>

  <main class="container">
    <section class="row justify-content-center mt-4">
      <div class="col-md-4">
        <div class="card text-center card-borderless">
          <img src="student3.jpeg" 
                class="card-img-top rounded-circle" alt="Student Login">
          <div class="card-body">
            <h5 class="card-title">Students Login</h5>
            <p class="card-text">Click the link below to login as a student.</p>
            <%= link_to 'Student Login (via Email or Google)', new_student_session_path, class: "btn btn-primary" %>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="card text-center card-borderless">
          <img src="librarian.jpg" 
                class="card-img-top rounded-circle" alt="Librarian Login">
          <div class="card-body">
            <h5 class="card-title">Librarians Login</h5>
            <p class="card-text">Click the link below to login as a librarian.</p>
            <%= link_to 'Librarian Login', new_librarian_session_path, class: "btn btn-primary" %>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="card text-center card-borderless" >
          <img src="admin.jpeg" 
                  class="card-img-top rounded-circle" alt="Administrator Login">
          <div class="card-body">
            <h5 class="card-title">Administrator Login</h5>
            <p class="card-text">Click the link below to login as an administrator.</p>
            <%= link_to 'Admin Login', new_admin_session_path, class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </section>
  </main>

  <footer class="mt-3 container">
    Copyright &copy; <%= Time.current.year %>
  </footer>

