<div class="container d-flex justify-content-center align-items-center min-vh-100">
  <div class="col-md-4">
    <p id="notice" class="alert alert-info"><%= notice %></p>

    <p>
      <strong>Isbn:</strong>
      <%= @transaction.isbn %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= @transaction.email %>
    </p>

    <p>
      <strong>Checkout:</strong>
      <%= @transaction.checkout %>
    </p>

    <p>
      <strong>Request:</strong>
      <%= @transaction.request %>
    </p>

    <p>
      <strong>Bookmarks:</strong>
      <%= @transaction.bookmarks %>
    </p>

    <div class="d-grid gap-2">
      <%= link_to 'Edit', edit_transaction_path(@transaction), class: 'btn btn-secondary' %> |
      <%= link_to 'Back', transactions_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>